<div class=title>
  <span class=handle>#</span>
  <a class="navigate"
    href="{{#plugin_url}}courseware?selected={{id}}{{/plugin_url}}">
      {{#titleize}}{{title}}{{/titleize}}
  </a>
  {{#user_can_edit_block}}
    <span class=controls>
      <button class="edit" data-title="{{#i18n}}Kapiteltitel bearbeiten{{/i18n}}">{{#i18n}}Ändern{{/i18n}}</button>
      <button class="trash" data-title="{{#i18n}}Gesamtes Kapitel löschen{{/i18n}}">{{#i18n}}Entfernen{{/i18n}}</button>
    </span>
  {{/user_can_edit_block}}
</div>

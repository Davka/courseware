<li class="subchapter{{#selected}} selected{{/selected}}"
  data-blockid={{id}}
  data-type=Subchapter>

  <div class=title>
    <span class=handle>#</span>
    <a class="navigate"
      href="{{#plugin_url}}courseware?selected={{id}}{{/plugin_url}}"
      data-publication="{{publication_date}}">
        {{title}}
    </a>

    <span class=controls>
      <button class=edit>{{#i18n}}Ändern{{/i18n}}</button>
      <button class=trash>{{#i18n}}Entfernen{{/i18n}}</button>
    </span>
  </div>

  {{#selected}}
    <ol class=active-subchapter
      data-blockid={{active_subchapter.id}}
      data-type=Subchapter>
      
      <li class="prev_next_navigation prev_navigation">
      {{#section_nav}}
      {{#prev}}
        <a class="prev navigate"
           data-blockid={{id}}
           href="{{#plugin_url}}courseware?selected={{id}}{{/plugin_url}}"
           title="{{title}}">
          {{#i18n}}zurück{{/i18n}}
        </a>
      {{/prev}}
      {{^prev}}
      <span class="prev" title="{{title}}">
        {{#i18n}}zurück{{/i18n}}
      </span>
      {{/prev}}
			{{/section_nav}}
      </li>


      {{#sections}}
        {{> section}}
      {{/sections}}
      
      <li class="prev_next_navigation next_navigation">
      {{#section_nav}}
      {{#next}}
        <a class="next navigate"
           data-blockid={{id}}
           href="{{#plugin_url}}courseware?selected={{id}}{{/plugin_url}}"
           title="{{title}}">
          {{#i18n}}weiterr{{/i18n}}
        </a>
      {{/next}}
      {{^next}}
      <span class="next" title="{{title}}">
        {{#i18n}}weiter{{/i18n}}
      </span>
      {{/next}}
			{{/section_nav}}
      </li>

        <li class=no-content>{{#i18n}}Keine Abschnitte{{/i18n}}</li>

        <li class=controls>
          <button class=add-section>{{#i18n}}Abschnitt einfügen{{/i18n}}</button>
          <button class=init-sort-section>{{#i18n}}Abschnitte sortieren{{/i18n}}</button>
          <button class=stop-sort-section>{{#i18n}}Sortieren abschließen{{/i18n}}</button>
        </li>
    </ol>

    

  {{/selected}}

</li>

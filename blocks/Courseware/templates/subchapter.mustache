<li class="subchapter{{#selected}} selected{{/selected}}{{#unpublished}} unpublished{{/unpublished}}"
  data-blockid="{{id}}"
  data-title="{{title}}"
  data-publication="{{publication_date}}"
  data-withdraw="{{withdraw_date}}"
  data-type=Subchapter
  {{#dom_title}}title="{{visible_since_title}} {{dom_title}}"{{/dom_title}}>

  {{> subchapter_title}}
    {{#sections_as_chapters}}
        {{#selected}}
            <ol class="sections">
              {{#sections}}
                {{> section}}
              {{/sections}}
              <div class="clear"></div>
              <li class=no-content></li>

              {{#user_can_edit_subchapter}}
                <li class=controls>
                  <button class=add-section>{{#i18n}}Abschnitt einf√ºgen{{/i18n}}</button>
                </li>
              {{/user_can_edit_subchapter}}
            </ol>
        {{/selected}}
    {{/sections_as_chapters}}
</li>

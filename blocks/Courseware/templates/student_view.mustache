<section id=courseware class=view-student>

  <h1> Courseware: {{courseware.title}} </h1>

  {{> controls}}

  <ol class=chapters>
    {{#chapters}}
      {{> chapter}}
    {{/chapters}}
  </ol>

  <ol class=sections>
    {{#sections}}
      {{> section}}
    {{/sections}}
  </ol>

  {{#active_section}}
    <section class=active-section data-id={{id}}>
      {{{html}}}
    </section>
  {{/active_section}}

</section>

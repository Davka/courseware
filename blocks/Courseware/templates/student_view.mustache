<section id=courseware class="view-student{{#user_may_author}} user-may-author{{/user_may_author}}">

  <h1> Courseware: {{courseware.title}} </h1>

  <div class=mode-switch>
    <button class="student" title="Studentenmodus">
      <img src="../../assets/images/icons/20/blue/headache.png"
      title="Studentenmodus"
      alt="Studentenmodus">
    </button>
    <button class="author" title="Autorenmodus">
      <img src="../../assets/images/icons/20/blue/doctoral_cap.png"
      title="Autorenmodus"
      alt="Autorenmodus">
    </button>
  </div>

  <ol class=chapters>

    {{#chapters}}
      {{> chapter}}
    {{/chapters}}

    <li class=no-content>{{#i18n}}Keine Kapitel{{/i18n}}</li>

    <li class=controls><button class=js-add-chapter>Kapitel einfügen</button></li>

  </ol>

  <ol class=sections>

    {{#sections}}
      {{> section}}
    {{/sections}}

    <li class=no-content>
      {{#i18n}}Keine Sektionen{{/i18n}}
    </li>
  </ol>

  {{#active_section}}
    <section class=active-section data-id={{id}}>
      {{{html}}}
    </section>
  {{/active_section}}

</section>

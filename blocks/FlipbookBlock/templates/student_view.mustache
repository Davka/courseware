<div class="flipbook-controls flipbook-left-control"><div class="flipbook-arr-left"></div></div>
<div class="flipbook" pages="{{pdf_pages}}">
    {{#imagefiles}}
    <div class="flipbookimage" style="background-image:url( ../../sendfile.php?type=0&file_id={{dokument_id}}&file_name={{filename}});" ></div>
    {{/imagefiles}}
</div>
<div class="flipbook-controls flipbook-right-control"><div class="flipbook-arr-right"></div></div>
<progress max="100" value="20"></progress>
<div class="flipbook-info">
	<span class="flipbook-current"></span> von <span class="flipbook-allpages"></span>
	<!-- Fullscreen Button-->
	<button class="button flipbookfullon">
		Vollbild
	</button>
</div>


<!-- PDF DOWNLOAD  -->
<div class=pdf>
	<a href="../../sendfile.php?type=0&file_id={{pdf_id}}&file_name={{pdf_filename}}" target="_blank">
		<image class="flipbook-pdficon" height="16" width="16" alt="file-pdf" src="../../assets/images/icons/16/blue/file-pdf.png" xlink:href="../../studip/assets/images/icons/blue/file-pdf.svg"/>
		{{pdf}}
	</a>
</div>

<div class="flipbookoverlay">
    <button class="flipbookfulloff button">schlie&szlig;en</button>
    <div class="flipbookimgfull-container">
    {{#imagefiles}}
    <img class="flipbookimgfull" src=" ../../sendfile.php?type=0&file_id={{dokument_id}}&file_name={{filename}}" image-data="{{filename}}"></img>
    {{/imagefiles}}
    </div>
</div>

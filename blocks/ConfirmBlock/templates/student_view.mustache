<input type="hidden" value="{{next_chapter_link}}" class="next_chapter_link_value">

<label class="confirmation">
  <input name=confirmed type=checkbox {{#confirmed}}checked disabled{{/confirmed}}>
  <span class="title">{{title}}</span>
</label>

{{#confirmed}}
<div class="messagebox messagebox_success">
    <a href="{{next_chapter_link}}" target="_self">{{#i18n}}Danke! Du kannst nun mit dem nächsten Abschnitt fortfahren.{{/i18n}}</a>
</div>
{{/confirmed}}

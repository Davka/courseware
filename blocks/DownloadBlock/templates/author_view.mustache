<input type="hidden" value="{{folder_id}}" folder-name="{{folder_name}}" class="download-stored-folder">
<input type="hidden" value="{{file_id}}" file-name="{{file_name}}" class="download-stored-file">
<input type="hidden" value="{{download_grade}}" class="download-grade-stored">

<label for="download-folder">{{#i18n}}Einen Ordner auswählen{{/i18n}}:</label>
<select type="text" class="download-folder" name="folder">
    <optgroup label="{{#i18n}}Ordner dieser Veranstaltung{{/i18n}}">
    {{#folders}}
        <option value="{{id}}" data-foldername="{{name}}">{{name}}</option>
    {{/folders}}
    </optgroup>
    <optgroup label="Ordner im eigenen Dateibereich">
        {{#user_folders}}
            <option value="{{id}}" data-foldername="{{name}}">{{name}}</option>
        {{/user_folders}}
    </optgroup>
    {{#other_user_folder}}
    <optgroup label="Ordner im Dateibereich eines anderen Nutzers">
        <option value="{{id}}" data-foldername="{{name}}">{{name}}</option>
    </optgroup>
    {{/other_user_folder}}
</select>
<br>

<label for="download-file">{{#i18n}}Eine Datei auswählen{{/i18n}}:</label>
<select type="text" class="download-file" name="file">
    {{#allfiles}}
        <option value="{{id}}" data-filename="{{name}}">{{name}}</option>
    {{/allfiles}}
</select>
<br>

<label for="download-title">{{#i18n}}Titel des Blocks{{/i18n}}:</label>
<input type="textbox" value="{{download_title}}" name="download-title" class="download-textbox" spellcheck="true">
<br>

<label for="download-info">{{#i18n}}Infobox vor Download{{/i18n}}:</label>
<input type="textbox" value="{{download_info}}" name="download-info" class="download-textbox" spellcheck="true">
<br>

<label for="download-success">{{#i18n}}Infobox nach Download{{/i18n}}:</label>
<input type="textbox" value="{{download_success}}" name="download-success" class="download-textbox" spellcheck="true">

<label for="download-grade">{{#i18n}}Fortschritt erst beim Herunterladen{{/i18n}}</label>
<input type="checkbox" name="download-grade" class="download-grade"> 

<div class="cw-button-box">
    <button name=save class=button>{{#i18n}}Speichern{{/i18n}}</button>
    <button name=cancel class=button>{{#i18n}}Abbrechen{{/i18n}}</button>
</div>

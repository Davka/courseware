{{#active}}

    <h2 class="testblock-header">{{title}}</h2>
  
    {{#description}}
        <div class="description">{{{description}}}</div>
    {{/description}}
  
    {{#available}}
        <div class="messagebox messagebox_info">
            {{#i18n}}Dieser Test ist zurzeit nicht verfügbar.{{/i18n}}
        </div>
    {{/available}}
    
    {{#has_test_questions}} 
        <div class="messagebox messagebox_info">
            {{#i18n}}Dieser Test enthält {{numberofex}} Fragen von denen Du nur {{test_questions}} beantworten musst.{{/i18n}}
        </div>
    {{/has_test_questions}}

    {{#exercises}}
        {{^skip_entry}}
            <ul class="exercise" id="exercise{{exercise_index}}">
                <li>
                    <div class="exercisetitle">
                        <button name="exercisenav" class="exercisenavbutton exercisenavback" button-data='{"id":"{{exercise_index}}", "numexes": "{{number_of_exercises}}", "direction": "back" }'></button>
                        {{#i18n}}Frage{{/i18n}} {{exercise_index}} / {{number_of_exercises}}
                        <button name="exercisenav" class="exercisenavbutton exercisenavnext" button-data='{"id":"{{exercise_index}}", "numexes": "{{number_of_exercises}}" , "direction": "next"}'></button>
                    </div>
                    {{#exercise_hint}}
                    <div class="exercise-button-container">
                        <button class="exercise-button exercise-hint-button" name="exercise-hint-button"  exercise-data="{{exercise_index}}"></button>
                    </div>
                    <div class="exercise-hint" style="display: none;" id="exercise-hint-{{exercise_index}}">
                            {{exercise_hint}}
                    </div>
                    {{/exercise_hint}}
                    {{#has_solution}}
                        {{#tryagain}}
                            <div class="messagebox messagebox_error">
                                {{#i18n}}Dein Lösungsversuch war noch nicht korrekt. Versuche es bitte nochmal.{{/i18n}}
                            </div>
                        {{/tryagain}}
                        {{#correct}}
                            <div class="messagebox messagebox_success">
                                {{#i18n}}Deine Lösung ist korrekt!{{/i18n}}
                            </div>
                        {{/correct}}
                        {{^tryagain}}
                            {{^correct}}
                                <div class="messagebox messagebox_info answerinfo">
                                {{#i18n}}Für diese Frage hast Du bereits eine Antwort abgegeben.{{/i18n}}
                                </div>
                            {{/correct}}
                        {{/tryagain}}
                    {{/has_solution}}
                    {{^self_test}}
                        <div class="messagebox messagebox_info submitinfo" style="display: none;">
                            {{#i18n}}Deine Lösung wurde eingetragen.{{/i18n}}
                        </div>
                    {{/self_test}}
                    {{#solved_completely}}
                        <div class="messagebox messagebox_success">
                            {{#i18n}}Danke! Du hast alle Aufgaben gelöst und kannst nun mit dem nächsten Abschnitt fortfahren.{{/i18n}}
                        </div>
                    {{/solved_completely}}
                    
                    {{#submitted_completely}}
                        <div class="messagebox messagebox_success" style="font-size: 14px;">
                            {{#i18n}}Du hast alle Aufgaben bearbeitet und kannst deine Lösungen jetzt ausdrucken.{{/i18n}}
                            <button name="print-exercise" class="button" style="float: right; margin: -8px !important">{{#i18n}}drucken{{/i18n}}</button>
                        </div>
                    {{/submitted_completely}}
                    {{^show_solution}}
                        {{> _question}}
                    {{/show_solution}}

                    {{#show_solution}}
                        {{> _solution}}

                        {{#self_test}}
                            {{#solving_allowed}}
                                {{> _reset_exercise}}
                            {{/solving_allowed}}
                        {{/self_test}}
                    {{/show_solution}}

                    
                </li>
            </ul>
        {{/skip_entry}}
    {{/exercises}}

    {{^exercises}}
        {{#typemismatch}}
            <div class="messagebox messagebox_error">
                {{#i18n}}Der Aufgabentyp hat sich geändert. Bitte wende dich an deinen Referenten.{{/i18n}}
            </div>
        {{/typemismatch}}
        {{^typemismatch}}
            <div class="messagebox messagebox_info">
                {{#i18n}}Keine Aufgaben.{{/i18n}}
            </div>
        {{/typemismatch}}
    {{/exercises}}

    {{^exercises_available}}
        <div class="messagebox messagebox_info">
            {{#i18n}}Es gibt momentan keine Aufgaben, die zum Bearbeiten zur Verfügung stehen.{{/i18n}}
        </div>
    {{/exercises_available}}
{{/active}}

{{^active}}
  {{> _vips_deactivated}}
{{/active}}

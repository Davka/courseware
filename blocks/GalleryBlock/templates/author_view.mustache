<input type="hidden" value="{{gallery_folder_id}}" class="gallery-stored-folder">
<input type="hidden" value="{{gallery_autoplay}}" class="gallery-stored-autoplay">
<input type="hidden" value="{{gallery_hidenav}}" class="gallery-stored-hidenav">
<input type="hidden" value="{{gallery_show_names}}" class="gallery-stored-show-names">

<label for="gallery-folder">{{#i18n}}Einen Ordner auswählen{{/i18n}}:</label>
<select type="text" class="gallery-folder" name="folder">
    <optgroup label="{{#i18n}}Ordner dieser Veranstaltung{{/i18n}}">
        {{#folders}}
            <option value="{{name}}" folder_id="{{id}}">{{name}}</option>
        {{/folders}}
    </optgroup>
    <optgroup label="Ordner im eigenen Dateibereich">
        {{#user_folders}}
            <option value="{{name}}" folder_id="{{id}}">{{name}}</option>
        {{/user_folders}}
    </optgroup>
</select>
<button class="cw-gallery-folder-select-info cw-info" data-title="{{#i18n}}Alle Bilddateien die sich in diesem Ordner des Dateibereichts befinden werden in der Galerie angezeigt.{{/i18n}}"></button>
<br>
<label for="gallery-height">{{#i18n}}Höhe der Galerie (in Pixeln){{/i18n}}:</label>
<input name="gallery-height" type="number" min=1 max=2000 step=1 value={{gallery_height}}>
<br>
<label for="gallery-autoplay">{{#i18n}}Autoplay{{/i18n}}:</label>
<input name="gallery-autoplay" type="checkbox">
<br>
<label for="gallery-autoplay-timer">{{#i18n}}Autoplay-Timer (in Sekunden){{/i18n}}:</label>
<input name="gallery-autoplay-timer" type="number" min=1 max=60 step=1 value={{gallery_autoplay_timer}}>
<br>
<label for="gallery-hidenav">{{#i18n}}Navigation verbergen{{/i18n}}:</label>
<input name="gallery-hidenav" type="checkbox">
<br>
<label for="gallery-show-names">{{#i18n}}Dateinamen anzeigen{{/i18n}}:</label>
<input name="gallery-show-names" type="checkbox">
<div class="cw-button-box">
    <button name=save class=button>{{#i18n}}Speichern{{/i18n}}</button>
    <button name=cancel class=button>{{#i18n}}Abbrechen{{/i18n}}</button>
</div>

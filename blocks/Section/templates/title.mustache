<div class=title>
  <h1>
    {{title}}
    {{#can_update}}
    <span class=controls>
      <button class="edit" data-title="{{#i18n}}Abschnittstitel bearbeiten{{/i18n}}">{{#i18n}}Ändern{{/i18n}}</button>
      <button class="edit-icon" data-title="{{#i18n}}Abschnitt Icon auswählen{{/i18n}}">{{#i18n}}Icon auswählen{{/i18n}}</button>
      <button class="trash" data-title="{{#i18n}}Abschnitt löschen{{/i18n}}">{{#i18n}}Entfernen{{/i18n}}</button>
    </span>
    {{/can_update}}
  </h1>
  {{#can_update}}
    <div class="add-icon">
        {{> icon_selector}}
    </div>
  {{/can_update}}
</div>

